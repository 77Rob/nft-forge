{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "Data/": ["./src/data"],
      "Data/*": ["./src/data/*"],
      "Components/": ["./src/components"],
      "Components/*": ["./src/components/*"],
      "Pages/": ["./src/pages"],
      "Pages/*": ["./src/pages/*"],
      "Utils/": ["./src/utils"],
      "Utils/*": ["./src/utils/*"],
      "Public/": ["./public"],
      "Public/*": ["./public/*"],
      "ImageProcessing/": ["src/image-processing"],
      "ImageProcessing/*": ["src/image-processing/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
